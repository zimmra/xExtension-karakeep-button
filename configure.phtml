  <form action="<?= _url('karakeepButton', 'revokeAccess'); ?>" method="post">
    <input type="hidden" name="_csrf" value="<?= FreshRSS_Auth::csrfToken(); ?>" />
    <div class="form-group form-actions">
      <div class="group-controls">
        <button type="submit" class="btn btn-important"><?= _t('ext.karakeepButton.configure.revoke_access'); ?></button>
